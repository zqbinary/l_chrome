{
  "manifest_version": 2,
  "name": "天气预报",
  "version": "1.0",
  "description": "查看未来两周的天气预报",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default": {
      "19": "images/icon19",
      "38": "images/icon38"
    },
    "default_title": "天气预报",
    "default_popup": "popup.html"

  },
  //选项页面
  "options_page": "options.html",
  "permissions": ["http://api.openweathermap.org/data/2.5/forecast?q=*"]

}